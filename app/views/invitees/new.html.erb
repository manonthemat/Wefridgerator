<section class="user-form">
    <h1>Invite!</h1>
    <%= form_for @invitee, {url: group_invitees_path(@group)} do |f| %>
        <%= f.text_area :email, placeholder: 'Enter email address...', class: 'form-control', rows: 5, name: "email" %>
        <%= f.submit "Send", class: 'btn btn-submit' %>
    <% end %>
</section>
